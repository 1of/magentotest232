<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <container name="modal.wrapper" htmlTag="div" htmlId="popup-modal">
                <block name="custom_modal" template="Magento_Theme::modal.phtml"/>
                <!--show custom cms block from Silifonov/ModalBlock-->
                <block class="Magento\Cms\Block\Block" name="block_identifier">
                    <arguments>
                        <argument name="block_id" xsi:type="string">modal_cms_block</argument>
                    </arguments>
                </block>
                <!--show new subscribe form-->
                <block class="Magento\Newsletter\Block\Subscribe" name="form.subscribe.custom" as="subscribe" template="subscribe.phtml"/>
            </container>
        </referenceContainer>
    </body>
</page>
